standby_mode = 'on'
primary_conninfo = 'host={{ postgresql_target_replication_parent }} port={{ postgresql_port }} user={{ postgresql_replica_user }} password={{ postgresql_replica_user_password }}'
trigger_file = '{{ postgresql_datadir }}/replication.trigger'


#  In the even of the secondary becoming the master the failover time will be able to seamlessly connect to the new primary
recovery_target_timeline = 'latest'
