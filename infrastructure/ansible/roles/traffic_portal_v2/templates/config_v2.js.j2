// this is the config that is consumed by /server.js on application startup
module.exports = {
    timeout: '{{ tpv2_timeout }}',
    useSSL: {{ tpv2_useSSL | lower }}, // set to true if you plan to use https (self-signed or trusted certs).
    port: {{ tpv2_http_port }},
    sslPort: {{ tpv2_sslPort }},
    // if useSSL is true, generate ssl certs and provide the proper locations.
    ssl: {
        key:    '{{ tpv2_ssl_key_file }}',
        cert:   '{{ tpv2_ssl_cert_file }}',
        ca:     [ '{{ tpv2_ssl_ca_files | join("', '") }}' ]
    },
    // set api 'base_url' to the traffic ops api (all api calls made from the traffic portal will be proxied to the api base_url)
    api: {
        base_url: '{{ tpv2_to_base_url }}/api/'
    },
    // default static files location (this is where the traffic portal html, css and javascript was installed) - /opt/traffic_portal_v2/public
    files: {
        static: '{{ tpv2_files_static_location }}'
    },
    // default log location (this is where traffic_portal_v2 logs are written) - /var/log/traffic_portal_v2/access.log
    log: {
        stream: '{{ tpv2_log_stream_location }}'
    },
    reject_unauthorized: {{ tpv2_reject_unauthorized }} // 0 if using self-signed certs, 1 if trusted certs
};
