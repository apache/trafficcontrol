{
{% if tcpPort is defined and tcpPort is not none and tcpPort != omit and tcpPort %}
  "tcpPort": {{ tcpPort }},
{% endif %}
{% if httpsPort is defined and httpsPort is not none and httpsPort != omit and httpsPort %}
  "httpsPort": {{ httpsPort }},
{% endif %}
{% if xmppId is defined and xmppId is not none and xmppId != omit and xmppId %}
  "xmppId": "{{ xmppId }}",
{% endif %}
{% if xmppPasswd is defined and xmppPasswd is not none and xmppPasswd != omit and xmppPasswd %}
  "xmppPasswd": "{{ xmppPasswd }}",
{% endif %}
{% if rack is defined and rack is not none and rack != omit and rack %}
  "rack": "{{ rack }}",
{% endif %}
{% if mgmtIpAddress is defined and mgmtIpAddress is not none and mgmtIpAddress != omit and mgmtIpAddress %}
  "mgmtIpAddress": "{{ mgmtIpAddress }}",
{% endif %}
{% if mgmtIpNetmask is defined and mgmtIpNetmask is not none and mgmtIpNetmask != omit and mgmtIpNetmask %}
  "mgmtIpNetmask": "{{ mgmtIpNetmask }}",
{% endif %}
{% if mgmtIpGateway is defined and mgmtIpGateway is not none and mgmtIpGateway != omit and mgmtIpGateway %}
  "mgmtIpGateway": "{{ mgmtIpGateway }}",
{% endif %}
{% if iloIpAddress is defined and iloIpAddress is not none and iloIpAddress != omit and iloIpAddress %}
  "iloIpAddress": "{{ iloIpAddress }}",
{% endif %}
{% if iloIpNetmask is defined and iloIpNetmask is not none and iloIpNetmask != omit and iloIpNetmask %}
  "iloIpNetmask": "{{ iloIpNetmask }}",
{% endif %}
{% if iloIpGateway is defined and iloIpGateway is not none and iloIpGateway != omit and iloIpGateway %}
  "iloIpGateway": "{{ iloIpGateway }}",
{% endif %}
{% if iloUsername is defined and iloUsername is not none and iloUsername != omit and iloUsername %}
  "iloUsername": "{{ iloUsername }}",
{% endif %}
{% if iloPassword is defined and iloPassword is not none and iloPassword != omit and iloPassword %}
  "iloPassword": "{{ iloPassword }}",
{% endif %}
{% if routerHostName is defined and routerHostName is not none and routerHostName != omit and routerHostName %}
  "routerHostName": "{{ routerHostName }}",
{% endif %}
{% if routerPortName is defined and routerPortName is not none and routerPortName != omit and routerPortName %}
  "routerPortName": "{{ routerPortName }}",
{% endif %}
  "hostName": "{{ hostName }}",
  "domainName": "{{ domainName }}",
  "cachegroupId": {{ cachegroupId }},
  "interfaces": [
    {
      "ipAddresses": [
      {% if ipAddress is defined and ipAddress is not none and ipAddress != omit and ipAddress %}
        {
          "address": "{{ (ipAddress + '/' + ipNetmask) | ipaddr }}",
          "gateway": "{{ ipGateway }}",
          "serviceAddress": {{ ipIsService }}
        }{% if ip6Address is defined and ip6Address is not none and ip6Address != omit and ip6Address %},{% endif %}
      {% endif %}
      {% if ip6Address is defined and ip6Address is not none and ip6Address != omit and ip6Address %}
        {
          "address": "{{ ip6Address }}",
        {% if ip6Gateway is defined and ip6Gateway is not none and ip6Gateway != omit and ip6Gateway %}
          "gateway": "{{ ip6Gateway }}",
        {% endif %}
          "serviceAddress": {{ ip6IsService }}
        }
      {% endif %}
      ],
      "monitor": {{ monitorInterface }},
      "mtu": {{ interfaceMtu }},
      "name": "{{ interfaceName }}"
    }
  ],
  "physLocationId": {{ physLocationId }},
  "typeId": {{ typeId }},
  "profileId": {{ profileId }},
  "cdnId": {{ cdnId }},
  "updPending": {{ updPending | bool | lower }},
  "statusId": {{ statusId }}
}
