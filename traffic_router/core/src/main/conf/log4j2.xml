<Configuration>
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n" />
        </Console>
        <RollingFile name="traffic_router_access"
                     fileName="/opt/traffic_router/var/log/access.log"
                     filePattern="/opt/traffic_router/var/log/access-%d{yyyyMMdd}.log" >
            <PatternLayout pattern="%m%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="200MB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        <RollingFile name="traffic_router"
                     fileName="/opt/traffic_router/var/log/traffic_router.log"
                     filePattern="/opt/traffic_router/var/log/traffic_router-%d{yyyyMMdd}.log" >
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="org.apache.traffic_control.traffic_router" level="INFO" />
        <Logger name="org.apache.traffic_control.traffic_router.core.access" level="INFO" >
            <AppenderRef ref="ACCESS"/>
        </Logger>
        <Root level="WARN" additivity="false">
            <AppenderRef ref="console" />
        </Root>
    </Loggers>
</Configuration>